@page
@model WEB_953504_Kozlovski.Areas.Admin.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p class="mt-2">
    <a asp-page="Create" class="btn btn-outline-info">
        <span class="fa fa-plus-circle"> Добавить</span>
    </a>
</p>

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Notebook[0].NotebookName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notebook[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notebook[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notebook[0].Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notebook[0].Brand)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Notebook) {
        <tr>
            <td>
                <img src="~/Images/@item.Image" alt="NoImage" width="50" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NotebookName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price) $
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand.BrandId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.NotebookId"
                   class="btn btn-outline-info">
                    <span class="fas fa-edit"></span>
                </a> <a asp-page="./Delete" asp-route-id="@item.NotebookId"
                        class="btn btn-outline-danger">
                    <span class="fas fa-trash-alt"></span>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
